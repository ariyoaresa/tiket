<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Tiket{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="{% block body_class %}{% endblock %}">
  <div class="page-container">
    <header class="app-header">
      <div class="container header-inner">
        <div class="brand">Tiket</div>
        <nav class="nav-links">
          <a href="/dashboard" class="nav-link">Dashboard</a>
          <a href="/tickets" class="nav-link">Tickets</a>
          <a href="/tickets/new" class="button primary">New Ticket</a>
          {% if user %}
          <div class="user-menu">
            <span class="user-name">{{ user.name }}</span>
            <form method="post" action="/auth/logout" style="display: inline;">
              <button type="submit" class="button secondary small">Logout</button>
            </form>
          </div>
          {% endif %}
        </nav>
      </div>
    </header>
    
    <main class="container">
      <div id="toast-container"></div>
      {% if error %}
        <div class="alert error">{{ error }}</div>
      {% endif %}
      {% if success %}
        <div class="alert success">{{ success }}</div>
      {% endif %}
      {% block content %}{% endblock %}
    </main>
    
    <footer class="footer">
      <div class="container">
        <div class="footer-bottom">
          <small>&copy; {{ "now"|date("Y") }} Tiket. All rights reserved.</small>
        </div>
      </div>
    </footer>
    
    <!-- Decorative elements -->
    <div class="decorative-circle circle-page-1"></div>
    <div class="decorative-circle circle-page-2"></div>
  </div>
  
  {% block scripts %}{% endblock %}
</body>
</html>